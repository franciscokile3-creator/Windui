-- WindUI Loader
local WindUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/Footagesus/WindUI/main/dist/main.lua"))()

-- Create Main Window
local Window = WindUI:CreateWindow({
    Title = "Forsaken",
    Icon = "door-open",
    Author = "Sightseeing76's",
    Folder = "Forsaken_Scripts",
    Size = UDim2.fromOffset(600, 450),
    Theme = "Dark",
    SideBarWidth = 200
})

-- Create Survivor Tab
local SurvivorTab = Window:Tab({
    Title = "Survivor",
    Icon = "user",
    Locked = false
})

-- Survivor Section
local SurvivorSection = SurvivorTab:Section({
    Title = "Survivor Scripts",
    Icon = "zap",
    Opened = true
})

SurvivorSection:Button({
    Title = "Auto Zap Survivor",
    Icon = "zap",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Dusk/refs/heads/main/Dusk"))()
    end
})

SurvivorSection:Button({
    Title = "Nol hub",
    Icon = "layers",
    Callback = function()
        getfenv().ADittoKey = "NOL_FRERKEY"
        loadstring(game:HttpGet("https://raw.githubusercontent.com/Syndromehsh/NOL/refs/heads/main/Nolsaken"))()
    end
})

SurvivorSection:Button({
    Title = "Chance Aimbot",
    Icon = "crosshair",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Chance-/refs/heads/main/Chance"))()
    end
})

SurvivorSection:Button({
    Title = "Shedletsky",
    Icon = "user",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Shedletsky-/refs/heads/main/Shedletsky%20script"))()
    end
})

SurvivorSection:Button({
    Title = "Elliot",
    Icon = "user-check",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Elliot/refs/heads/main/Elliot"))()
    end
})

-- Create Killers Tab
local KillersTab = Window:Tab({
    Title = "Killers",
    Icon = "skull",
    Locked = false
})

-- Killers Section
local KillersSection = KillersTab:Section({
    Title = "Killer Scripts",
    Icon = "skull",
    Opened = true
})

KillersSection:Button({
    Title = "Noli nova",
    Icon = "skull",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/franciscokile3-creator/Noli-nova/refs/heads/main/Noli%20nova"))()
    end
})

-- Optional Theme Switcher Topbar Button
Window:CreateTopbarButton("theme-switcher", "moon", function()
    WindUI:SetTheme(WindUI:GetCurrentTheme() == "Dark" and "Light" or "Dark")
    WindUI:Notify({
        Title = "Theme Changed",
        Content = "Current theme: "..WindUI:GetCurrentTheme(),
        Duration = 2
    })
end, 999)
